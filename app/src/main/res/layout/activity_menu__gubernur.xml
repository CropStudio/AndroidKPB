<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.gubernur.Menu_Gubernur">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:id="@+id/list_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/list_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="#ffffff">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#0B1733">

                        <com.synnapps.carouselview.CarouselView
                            android:id="@+id/carousel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:fillColor="#ffffff"
                            app:pageColor="#80ffffff"
                            app:radius="3dp"
                            app:slideInterval="3000"
                            app:strokeColor="#80ffffff"
                            app:strokeWidth="1dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/icon_kpb" />

                                <TextView
                                    android:id="@+id/pilihlokasi"
                                    android:layout_width="match_parent"
                                    android:layout_height="34dp"
                                    android:layout_marginLeft="10dp"
                                    android:text="KPB LAMPUNG"
                                    android:textColor="@color/bg_screen3"
                                    android:textSize="20dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="35dp"
                                android:layout_weight="1">

                                <ImageButton
                                    android:id="@+id/mainMenuDashboard"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:scaleType="centerInside"
                                    app:srcCompat="@drawable/ic_user" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_screen3">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/c_white"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="Pilih Kabupaten"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/kabupaten"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@android:drawable/editbox_background_normal"
                                android:hint="Nama" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="Pilih Kecamatan"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/kecamatan"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@android:drawable/editbox_background_normal" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="Pilih Kelompok Tani"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/kelompoktani"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@android:drawable/editbox_background_normal"
                                android:hint="Alamat" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="Pilih Status Pengajuan"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/txt_status"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@android:drawable/editbox_background_normal" />


                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/bg_screen3"
                                android:gravity="center"
                                android:text="Kirim" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:weightSum="3">

                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/chart"
                                    android:layout_width="match_parent"
                                    android:layout_height="400dp" />

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/jumlahpoktan"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_margin="2dp"
                                    android:clickable="true"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="2dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="Jumlah Poktan"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="27dp"
                                        android:gravity="center"
                                        android:text="238618"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/TotalPenerima"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_margin="2dp"
                                    android:clickable="true"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="2dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="Total penerima/NIK"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="27dp"
                                        android:gravity="center"
                                        android:text="238618"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/Luastanah"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_margin="2dp"
                                    android:clickable="true"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="2dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="Luas Tanah (HA)"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="27dp"
                                        android:gravity="center"
                                        android:text="238618"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_margin="2dp"
                                    android:clickable="true"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="2dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="Pupuk Urea"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/PupukUrea"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="27dp"
                                        android:gravity="center"
                                        android:text="238618"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_margin="2dp"
                                    android:clickable="true"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="2dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="Pupuk ZA (KG)"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/PuPukza"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="27dp"
                                        android:gravity="center"
                                        android:text="238618"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_margin="2dp"
                                    android:clickable="true"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="2dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="Pupuk SP36 (KG)"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/PupukSp36"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="27dp"
                                        android:gravity="center"
                                        android:text="238618"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_margin="2dp"
                                    android:clickable="true"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="2dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="Pupuk NPK"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/PupukNpk"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="27dp"
                                        android:gravity="center"
                                        android:text="238618"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_margin="2dp"
                                    android:clickable="true"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="2dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="Pupuk Organik (KG)"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="27dp"
                                        android:gravity="center"
                                        android:text="238618"
                                        android:textColor="@color/bg_screen3"
                                        android:textSize="10dp"
                                        android:textStyle="bold" />


                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1">
                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/bg_screen3"/>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </ScrollView>
            </LinearLayout>



            <!--            <FrameLayout-->
            <!--                android:layout_width="250dp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_gravity="right"-->
            <!--                android:background="@android:color/white">-->

            <!--                <com.mindorks.placeholderview.PlaceHolderView-->
            <!--                    android:id="@+id/drawerView"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:scrollbars="vertical" />-->
            <!--            </FrameLayout>-->



        </androidx.drawerlayout.widget.DrawerLayout>



        <LinearLayout
            android:id="@+id/linBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/c_white"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/ivHome1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.5"
                app:srcCompat="@drawable/ic_home_black_24dp" />

            <ImageView
                android:id="@+id/grafik1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.5"
                app:srcCompat="@drawable/grafik" />

            <ImageView
                android:id="@+id/profile1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.5"
                app:srcCompat="@drawable/ic_person_black_24dp" />

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>