                                        android:textStyle="bold" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="5dp"
                                        android:background="@drawable/doted_line"
                                        android:layerType="software" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <android.support.design.widget.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp">

                                            <android.support.design.widget.TextInputEditText
                                                android:id="@+id/mJmlhKomoditas"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:backgroundTint="@color/c_black"
                                                android:focusable="auto"
                                                android:hint="Jumlah ternak anda"
                                                android:inputType="number"
                                                android:nextFocusDown="@id/mPekerjanSelainTani"
                                                android:text="0"
                                                android:textColor="@color/c_black"
                                                android:textColorHint="@color/statusbarColor" />
                                        </android.support.design.widget.TextInputLayout>

                                    </LinearLayout>

                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/control_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_screen3"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/mSubmit"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/btn_rounded_green"
                        android:fontFamily="sans-serif-thin"
                        android:text="Daftar"
                        android:textAllCaps="false"
                        android:textColor="@color/c_white"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>