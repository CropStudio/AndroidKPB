<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:theme="@style/AppThemeSubs"
    android:weightSum="3"
    tools:context=".features.data_produksi.createProduksi.CreateProduksiActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_default_in" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:id="@+id/LayoutRegist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center|top"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_check" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:paddingRight="25dp"
                android:paddingBottom="10dp"
                android:text="Masukkan Data Produksi"
                android:textColor="@color/color_default_blue"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/addressHide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp">

                        <LinearLayout
                            android:id="@+id/layoutSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_spinner"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                app:srcCompat="@drawable/ic_list" />

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/mKomoditas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:textColor="@color/color_default_black"
                                android:textSize="12sp"
                                app:ms_hint="Provinsi"
                                app:ms_hint_color="@color/color_default_black"
                                app:ms_padding_left="30dp" />

                            <!--                        com.toptoche.searchablespinnerlibrary.SearchableSpinner-->

                        </LinearLayout>

                        <TextView
                            android:layout_below="@+id/layoutSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Pilihan Komoditas"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp">

                        <LinearLayout
                            android:id="@+id/layoutSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_spinner"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                app:srcCompat="@drawable/ic_list" />

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/mSpinerHasilProduksi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:textColor="@color/color_default_black"
                                android:textSize="12sp"
                                app:ms_hint="Provinsi"
                                app:ms_hint_color="@color/color_default_black"
                                app:ms_padding_left="30dp" />

                            <!--                        com.toptoche.searchablespinnerlibrary.SearchableSpinner-->

                        </LinearLayout>

                        <TextView
                            android:layout_below="@+id/layoutSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Pilihan Hasil Produksi"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp">

                        <LinearLayout
                            android:id="@+id/layoutSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_spinner"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                app:srcCompat="@drawable/ic_list" />

                            <Spinner
                                android:id="@+id/mSpinnerSiklus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:textColor="@color/color_default_black"
                                android:textSize="12sp"
                                app:ms_hint="Provinsi"
                                app:ms_hint_color="@color/color_default_black"
                                app:ms_padding_left="30dp" />

                            <!--                        com.toptoche.searchablespinnerlibrary.SearchableSpinner-->

                        </LinearLayout>

                        <TextView
                            android:layout_below="@+id/layoutSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Pilihan Siklus"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jumlah Hasil Produksi"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:layout_marginTop="10dp"
                    app:boxStrokeColor="@color/color_default_blue"
                    app:hintTextColor="@color/color_default_black"
                    app:startIconDrawable="@drawable/ic_address">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/mJumlah"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="@color/color_default_black"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonHide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/mSubmit"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Tambah"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/color_default_blue" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="0">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/copyright" />

    </LinearLayout>

</RelativeLayout>