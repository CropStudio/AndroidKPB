<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_white"
    tools:context=".features.petani.profile.createaset.CreateAset">

    <RelativeLayout
        android:id="@+id/Layouttoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_white"
            android:minHeight="?attr/actionBarSize">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_white"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/AppTheme">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Layouttoolbar"
        android:background="@color/c_white"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/c_white"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/mDataKeluargaLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="visible">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/CardForm"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="3dp"
                                    app:cardMaxElevation="2dp"
                                    app:cardUseCompatPadding="true"
                                    app:contentPadding="5dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:id="@+id/CardAnak"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:padding="5dp"
                                            android:visibility="visible">

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5dp"
                                                android:background="@color/c_white"
                                                android:backgroundTintMode="screen"
                                                android:padding="5dp"
                                                android:textColorHint="@color/statusbarColor"
                                                android:visibility="visible">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="Sub Sektor"
                                                        android:textColor="@color/colorPrimaryDark" />

                                                    <Spinner
                                                        android:id="@+id/mSubsektor"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:text="Sub sektor"
                                                        android:textSize="16dp"
                                                        app:ms_hint="Provinsi"
                                                        app:ms_hint_color="@color/statusbarColor"
                                                        app:ms_padding_bottom="0dp"
                                                        app:ms_padding_left="5dp"
                                                        app:ms_padding_top="15dp" />

                                                </LinearLayout>

                                            </com.google.android.material.textfield.TextInputLayout>

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_margin="5dp"
                                                android:background="@color/statusbarColor" />

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5dp"
                                                android:padding="5dp"
                                                android:textColorHint="@color/statusbarColor"
                                                android:visibility="visible">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="Komoditas"
                                                        android:textColor="@color/colorPrimaryDark" />

                                                    <Spinner
                                                        android:id="@+id/mKomoditas"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:text="Komoditas"
                                                        android:textSize="16dp"
                                                        app:ms_hint="Provinsi"
                                                        app:ms_hint_color="@color/statusbarColor"
                                                        app:ms_padding_bottom="0dp"
                                                        app:ms_padding_left="5dp"
                                                        app:ms_padding_top="15dp" />

                                                </LinearLayout>

                                            </com.google.android.material.textfield.TextInputLayout>

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_margin="5dp"
                                                android:background="@color/statusbarColor" />

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/LayoutLuasTanah"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:visibility="visible"
                                                app:cardBackgroundColor="#F3F1F1"
                                                app:cardCornerRadius="2dp"
                                                app:cardElevation="8dp"
                                                app:cardMaxElevation="5dp"
                                                app:cardUseCompatPadding="true"
                                                app:contentPadding="8dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                    <RelativeLayout
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content">

                                                        <TextView
                                                            android:id="@+id/labelLuastanah"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:text="Luas Lahan"
                                                            android:textColor="@color/colorPrimaryDark"
                                                            android:textSize="15dp"
                                                            android:textStyle="bold" />

                                                        <LinearLayout
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_alignParentRight="true"
                                                            android:orientation="vertical">

                                                            <TextView
                                                                android:id="@+id/txt1"
                                                                android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"
                                                                android:text="0.5 = 1/2 hektar"
                                                                android:textColor="@color/c_black"
                                                                android:textSize="15dp"
                                                                android:textStyle="bold" />

                                                            <TextView
                                                                android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"
                                                                android:layout_above="@+id/txt1"
                                                                android:text="1 = 1 hektar"
                                                                android:textColor="@color/c_black"
                                                                android:textSize="15dp"
                                                                android:textStyle="bold" />

                                                        </LinearLayout>

                                                    </RelativeLayout>

                                                    <View
                                                        android:layout_width="match_parent"
                                                        android:layout_height="5dp"
                                                        android:layout_gravity="center"
                                                        android:layout_margin="5dp"
                                                        android:background="@drawable/doted_line"
                                                        android:layerType="software" />

                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:orientation="vertical">

                                                        <com.google.android.material.textfield.TextInputLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginTop="5dp">

                                                            <com.google.android.material.textfield.TextInputEditText
                                                                android:id="@+id/mLuasLahan"
                                                                android:layout_width="match_parent"
                                                                android:layout_height="wrap_content"
                                                                android:backgroundTint="@color/c_black"
                                                                android:focusable="auto"
                                                                android:hint="Luas Lahan"
                                                                android:inputType="number"
                                                                android:nextFocusDown="@id/mPekerjanSelainTani"
                                                                android:text="0"
                                                                android:textColor="@color/c_black"
                                                                android:textColorHint="@color/statusbarColor" />

                                                        </com.google.android.material.textfield.TextInputLayout>

                                                    </LinearLayout>

                                                </LinearLayout>

                                            </androidx.cardview.widget.CardView>

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/LayoutBanyakKomoditas"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:visibility="visible"
                                                app:cardBackgroundColor="#F3F1F1"
                                                app:cardCornerRadius="2dp"
                                                app:cardElevation="8dp"
                                                app:cardMaxElevation="5dp"
                                                app:cardUseCompatPadding="true"
                                                app:contentPadding="8dp">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical">

                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:text="Banyak Komoditas"
                                                        android:textColor="@color/colorPrimaryDark"
                                                        android:textSize="15dp"
                                                        android:textStyle="bold" />

                                                    <View
                                                        android:layout_width="match_parent"
                                                        android:layout_height="5dp"
                                                        android:layout_gravity="center"
                                                        android:layout_margin="5dp"
                                                        android:background="@drawable/doted_line"
                                                        android:layerType="software" />

                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:orientation="vertical">

                                                        <com.google.android.material.textfield.TextInputLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginTop="5dp">

                                                            <com.google.android.material.textfield.TextInputEditText
                                                                android:id="@+id/mJmlhKomoditas"
                                                                android:layout_width="match_parent"
                                                                android:layout_height="wrap_content"
                                                                android:backgroundTint="@color/c_black"
                                                                android:focusable="auto"
                                                                android:hint="Jumlah"
                                                                android:inputType="number"
                                                                android:nextFocusDown="@id/mPekerjanSelainTani"
                                                                android:text="0"
                                                                android:textColor="@color/c_black"
                                                                android:textColorHint="@color/statusbarColor" />

                                                        </com.google.android.material.textfield.TextInputLayout>

                                                    </LinearLayout>

                                                </LinearLayout>

                                            </androidx.cardview.widget.CardView>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="10dp"
                                            android:gravity="right"
                                            android:orientation="horizontal">

                                            <Button
                                                android:id="@+id/mAddAset"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/btn_add_assets"
                                                android:onClick="onAddAset"
                                                android:paddingLeft="15dp"
                                                android:paddingRight="15dp"
                                                android:text="Tambah Data"
                                                android:textColor="@color/white" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/container"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LayoutBtnTambahAset"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="5dp"
                                android:visibility="visible">

                                <ImageView
                                    android:id="@+id/layoutImageDesc"
                                    android:layout_width="match_parent"
                                    android:layout_height="400dp"
                                    android:layout_gravity="center"
                                    android:paddingTop="50dp"
                                    android:visibility="visible"
                                    app:srcCompat="@drawable/ic_missing" />

                                <Button
                                    android:id="@+id/mTambah"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/btn_add_assets"
                                    android:paddingLeft="25dp"
                                    android:paddingRight="25dp"
                                    android:textAllCaps="false"
                                    android:text="Klik Disini Untuk Menambahkan Aset Anda"
                                    android:textColor="@color/white"
                                    android:textSize="12dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>