<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardMaxElevation="0dp"
    app:cardUseCompatPadding="false"
    app:contentPadding="5dp">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/mCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_toRightOf="@id/mCheckbox"
            android:id="@+id/icon_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/shopping_bag" />


        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon_image"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/mNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Nama barang yang di jual toko ini dana dapat anda beri"
                android:textSize="17dp" />


            <TextView
                android:id="@+id/mToko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Nama Toko" />

            <TextView
                android:id="@+id/mHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="100.000"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background_rounded">

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/mQty"
                    android:textAlignment="center"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:background="@color/float_transparent"
                    app:backGroundColor="@color/float_transparent"
                    app:initialNumber="1"
                    app:textColor="@color/c_black" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>