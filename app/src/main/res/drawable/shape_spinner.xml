<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape android:shape="rectangle">
                    <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />

                    <solid android:color="@color/white" />
                    <stroke android:width="3px" android:color="#959393" />
                    <corners android:radius="3dp" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_check_circle_black_24dp" android:gravity="center|left" android:left="12dp" />

            <item android:drawable="@drawable/ic_arrow_drop_down_black_24dp" android:gravity="center|right" />

        </layer-list>

    </item>

</selector>