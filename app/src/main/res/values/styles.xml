<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyToolbarStyle">
        <item name="android:maxHeight">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:background">@color/c_white</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <!-- No need for colorPrimary, colorPrimaryDark, colorAccent here
             this should go to the AppTheme -->
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/red</item> <!-- Whatever color you want-->
    </style>

    <style name="Nganu">
        <item name="colorAccent">@color/c_white</item> <!-- Whatever color you want-->
    </style>

        <style name="HeaderBar">
            <item name="android:background">@color/c_white</item>
        </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/blues</item>
    </style>
</resources>
